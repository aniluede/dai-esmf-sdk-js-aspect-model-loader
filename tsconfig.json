{
    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true
    },
    "compileOnSave": false,
    "compilerOptions": {
        "types": ["node", "jest"],
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "target": "es6",
        "downlevelIteration": true,
        "removeComments": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
